<Window x:Class="LockDownKiosk.Teacher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Teacher Console"
        Height="450"
        Width="800">
    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Teacher Console"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <TextBlock x:Name="StatusText"
                       Text="Status: Not started"
                       FontSize="14"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Start Session"
                        Width="140"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="StartSession_Click"/>

                <Button Content="End Session"
                        Width="140"
                        Height="35"
                        Click="EndSession_Click"/>
            </StackPanel>

            <TextBlock Text="Received messages:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,10,0,5"/>

            <ListBox x:Name="MessagesList"
                     Height="170"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Status Output:"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,5,0,5"/>

            <TextBox x:Name="StatusTextBox"
                     Height="120"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     IsReadOnly="True"
                     TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
