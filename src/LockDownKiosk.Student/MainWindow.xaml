<Window x:Class="LockDownKiosk.Student.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Client" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Student Client"
                   FontSize="36"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <TextBlock x:Name="StatusText"
                   Grid.Row="1"
                   Text="Status: Not connected"
                   FontSize="18"
                   Margin="0,0,0,20"/>

        <Button Grid.Row="2"
                Content="Send HELLO"
                Width="320"
                Height="60"
                HorizontalAlignment="Center"
                Click="SendHello_Click"
                Margin="0,0,0,20"/>

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="220"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="220"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Log:"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <ListBox x:Name="LogList"
                     Grid.Row="1"
                     FontSize="16"/>

            <TextBlock Grid.Row="2"
                       Text="Status Output:"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,16,0,8"/>

            <TextBox x:Name="StatusOutputBox"
                     Grid.Row="3"
                     FontFamily="Consolas"
                     FontSize="16"
                     IsReadOnly="True"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"/>
        </Grid>
    </Grid>
</Window>
